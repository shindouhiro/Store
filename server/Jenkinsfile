pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // 检出代码，工作目录设置为server
                dir('server') {
                    checkout scm
                }
            }
        }
        
        stage('Setup Environment') {
            steps {
                dir('server') {
                    // 安装pnpm
                    sh '''
                        # 检查pnpm是否已安装
                        if ! command -v pnpm &> /dev/null; then
                            echo "📦 正在安装pnpm..."
                            npm install -g pnpm
                        else
                            echo "✅ pnpm已安装，版本: $(pnpm --version)"
                        fi
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('server') {
                    sh 'pnpm install'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('server') {
                    sh 'pnpm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('server') {
                    sh 'pnpm run test'
                }
            }
        }
        
        stage('Docker Build & Deploy') {
            steps {
                dir('server') {
                    sh 'chmod +x build.sh'
                    sh './build.sh'
                }
            }
        }
    }
}
