pipeline {
    agent any
    tools {
        nodejs 'node20'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // 检出整个仓库到workspace
                checkout scm
                sh 'node -v'
                sh 'npm -v'
            }
        }
        
        
        stage('Docker Build & Deploy') {
            steps {
                dir('server') {
                    sh '''
                        echo "🐳 开始Docker构建和部署..."
                        chmod +x build.sh
                        ./build.sh
                    '''
                }
            }
        }
    }
    
    post {
        always {
            echo '🏁 Pipeline执行完成'
        }
        success {
            echo '✅ Pipeline执行成功！'
        }
        failure {
            echo '❌ Pipeline执行失败！'
        }
    }
}
