pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // æ£€å‡ºä»£ç ï¼Œå·¥ä½œç›®å½•è®¾ç½®ä¸ºserver
                dir('server') {
                    checkout scm
                }
            }
        }
        
        stage('Setup Environment') {
            steps {
                dir('server') {
                    // å®‰è£…pnpm
                    sh '''
                        # æ£€æŸ¥pnpmæ˜¯å¦å·²å®‰è£…
                        if ! command -v pnpm &> /dev/null; then
                            echo "ðŸ“¦ æ­£åœ¨å®‰è£…pnpm..."
                            npm install -g pnpm
                        else
                            echo "âœ… pnpmå·²å®‰è£…ï¼Œç‰ˆæœ¬: $(pnpm --version)"
                        fi
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('server') {
                    sh 'pnpm install'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('server') {
                    sh 'pnpm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('server') {
                    sh 'pnpm run test'
                }
            }
        }
        
        stage('Docker Build & Deploy') {
            steps {
                dir('server') {
                    sh 'chmod +x build.sh'
                    sh './build.sh'
                }
            }
        }
    }
}
