pipeline {
    agent any
    tools {
        nodejs 'node20'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // 检出整个仓库到workspace
                checkout scm
                sh 'node -v'
                sh 'npm -v'
            }
        }
        
        stage('Setup Environment') {
            steps {
                sh '''
                    echo "🔧 安装pnpm..."
                    if ! command -v pnpm &> /dev/null; then
                        npm install -g pnpm
                    else
                        echo "✅ pnpm已安装，版本: $(pnpm --version)"
                    fi
                    
                    echo "📂 检查workspace配置..."
                    ls -la pnpm-workspace.yaml
                '''
            }
        }
        
        stage('Docker Build & Deploy') {
            steps {
                dir('server') {
                    sh '''
                        echo "📁 当前目录: $(pwd)"
                        chmod +x ./build.sh
                        ./build.sh
                    '''
                  
                }
            }
        }
    }
    
    post {
        always {
            echo '🏁 Pipeline执行完成'
        }
        success {
            echo '✅ Pipeline执行成功！'
        }
        failure {
            echo '❌ Pipeline执行失败！'
        }
    }
}
